{
  "name": "@santi020k/eslint-config-basic",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://santi020k.github.io/eslint-config-basic/",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "npm@10.8.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "vitest run packages/tests",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky config/.husky",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test && npm run lint && npm run build",
    "docs": "typedoc",
    "docs:md": "typedoc --options typedoc.markdown.mjs",
    "docs:clean": "rm -rf docs docs-md"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.5.3",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.10.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "overrides": {
    "eslint": "$eslint",
    "eslint-config-standard": "$eslint-config-standard",
    "eslint-plugin-promise": "$eslint-plugin-promise",
    "eslint-plugin-n": "$eslint-plugin-n",
    "lodash": "^4.17.23",
    "minimist": "^1.2.6",
    "tmp": "^0.2.3"
  }
}
